<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textSETTING"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:gravity="center"
        android:text="SETTING"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Privacybtn1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:text="Privacy"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:gravity="center_vertical"
        android:text="Block contacts,Disapperaring messsage"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/Privacybtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:fontFamily="sans-serif"
        android:gravity=""
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:text="Edit Profile"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSetting1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center_vertical"
        android:text="Name,About,Phone,Links"
        android:textSize="20sp" />


    <Button
        android:id="@+id/AppLanguagebtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:text="App Language"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textSetting2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:gravity="center_vertical"
        android:text="Name,About,Phone,Links"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/Backbtn"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
</FrameLayout>